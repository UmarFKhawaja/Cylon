{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": [
      "es2020",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@cylon/app-block-library": [
        "libraries/app-block-library/src/index.ts"
      ],
      "@cylon/common-library": [
        "libraries/common-library/src/index.ts"
      ],
      "@cylon/component-block-library": [
        "libraries/component-block-library/src/index.ts"
      ],
      "@cylon/core-library": [
        "libraries/core-library/src/index.ts"
      ],
      "@cylon/field-block-library": [
        "libraries/field-block-library/src/index.ts"
      ],
      "@cylon/generate-clause-library": [
        "libraries/generate-clause-library/src/index.ts"
      ],
      "@cylon/import-clause-library": [
        "libraries/import-clause-library/src/index.ts"
      ],
      "@cylon/layout-block-library": [
        "libraries/layout-block-library/src/index.ts"
      ],
      "@cylon/frontend-spec-library": [
        "libraries/frontend-spec-library/src/index.ts"
      ],
      "@cylon/provider-block-library": [
        "libraries/provider-block-library/src/index.ts"
      ],
      "@cylon/route-block-library": [
        "libraries/route-block-library/src/index.ts"
      ],
      "@cylon/widget-block-library": [
        "libraries/widget-block-library/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
